    "lowdb": "^6.0.1",
    "node-cron": "^3.0.2",
    "picocolors": "^1.0.0",
    "pm2": "^5.3.0",
    "puppeteer": "^21.3.4",
    "timeago.js": "^4.0.2"
  },
  "devDependencies": {
    "@types/node-cron": "^3.0.9",
    "@sindresorhus/tsconfig": "^4.0.0",
    "@types/better-sqlite3": "^7.6.5",
    "@types/node": "^18.17.19",
    "esno": "^0.17.0",
