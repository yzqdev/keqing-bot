{
  //https://www.typescriptlang.org/tsconfig#compilerOptions
   "extends": "@sindresorhus/tsconfig",
   "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": ["ESNext","DOM","DOM.Iterable"],
     "baseUrl": "./",
     "paths": {
       "@/*": [
         "src/*"
       ]
     },
     "allowJs": true,
    "resolveJsonModule": true
   }
}
